<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryInfo">

    <ListView
        android:id="@+id/listBooks"
        android:layout_width="365dp"
        android:layout_height="350dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favoriteButton" />

    <TextView
        android:id="@+id/libraryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="libraryName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/favoriteButton"
        android:layout_width="57dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="â˜…"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/itinaryButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="itinaryButton"
        app:layout_constraintBottom_toTopOf="@+id/mapMenuLibrary"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/searchMenuLibrary"
        android:layout_width="150dp"
        android:layout_height="39dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/mapMenuLibrary"
        android:layout_width="150dp"
        android:layout_height="39dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/photoButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="photoButton"
        app:layout_constraintBottom_toTopOf="@+id/searchMenuLibrary"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/inButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="Check-In"
        app:layout_constraintBottom_toTopOf="@+id/itinaryButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/outButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Check-Out"
        app:layout_constraintBottom_toTopOf="@+id/photoButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/donateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Donate"
        app:layout_constraintBottom_toTopOf="@+id/itinaryButton"
        app:layout_constraintEnd_toStartOf="@+id/outButton"
        app:layout_constraintStart_toEndOf="@+id/inButton" />
</androidx.constraintlayout.widget.ConstraintLayout>